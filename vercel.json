{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm ci",
  "framework": "nextjs",
  "functions": {
    "app/api/generate-pdf/route.ts": {
      "maxDuration": 300,
      "memory": 1024
    },
    "app/api/export-evidencias-mutiroes/route.ts": {
      "maxDuration": 300,
      "memory": 1024
    },
    "app/api/export-evidencias-revitalizacoes/route.ts": {
      "maxDuration": 300,
      "memory": 1024
    },
    "app/api/export-evidencias-rotineiros/route.ts": {
      "maxDuration": 300,
      "memory": 1024
    },
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}
